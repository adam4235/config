#!/bin/bash
disk_loc=`cat ${HOME}/bin/disk_loc.txt`

while ! [ -e "${disk_loc}" ]
do
    echo "Waiting for disk..."
    sleep 1
done

cd ${HOME}
rsync -rt --modify-window=1 --progress "${HOME}/myfiles" "${HOME}/bin" "${HOME}/Desktop" "${HOME}/github_pages" "$disk_loc"

/home/adam/bin/show_installed_apps.sh > "$disk_loc/installed.txt"

#Backup thunderbird and firefox too.  They take up a lot of disk space, but their files can be important:
#thunderbird because it has my downloaded email (in case I accidentally delete it from the server),
#and firefox because it has my cookies and site data for all the websites I visit.

rsync -rt --modify-window=1 "${HOME}/.thunderbird" ${HOME}/backup/thunderbird
rsync -rt --modify-window=1 "${HOME}/.mozilla" ${HOME}/backup/firefox

